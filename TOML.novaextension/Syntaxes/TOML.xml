<?xml version="1.0" encoding="UTF-8"?>
<syntax name="toml">
    <meta>
        <name>TOML</name>
        <type>structured</type>
        <preferred-file-extension>toml</preferred-file-extension>
    </meta>

    <detectors>
        <extension priority="1.0">toml</extension>
    </detectors>

    <comments>
        <single>
            <expression>#</expression>
        </single>
    </comments>

    <brackets>
        <pair open="[" close="]" />
    </brackets>

    <surrounding-pairs>
        <pair open="&lt;" close="&gt;" />
        <pair open="{" close="}" />
        <pair open="[" close="]" />
        <pair open="(" close=")" />
        <pair open="&apos;" close="&apos;" />
        <pair open="&quot;" close="&quot;" />
        <pair open="`" close="`" />
    </surrounding-pairs>

    <injection>
        <expression>^(toml)$</expression>
    </injection>

    <tree-sitter language="toml">
        <highlights />
        <folds />
        <symbols />
    </tree-sitter>
</syntax>
